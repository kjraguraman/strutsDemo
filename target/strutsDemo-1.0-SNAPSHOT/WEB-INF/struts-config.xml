<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans>
        <form-bean name="RegForm" type="Bean.RegistrationForm"/>
        <form-bean name="GetEmpDetailForm" type="org.apache.struts.action.DynaActionForm">
            <form-property name="id" type="java.lang.Integer"/>
        </form-bean>
    </form-beans>
    <action-mappings>

        <!--  Display Employees  -->
        <action path="/getEmployees" type="Controller.EmployeesController" parameter="displayEmployees">
                <forward name="displayEmployees" path="/Views/displayEmployees.jsp"/>
        </action>

        <!--  Display Employees and Their Vehicles  -->
        <action path="/getEmpWithVeh" type="Controller.EmployeesController" parameter="disEmpWithVeh">
            <forward name="disEmpWithVeh" path="/Views/disEmpWithVeh.jsp"/>
        </action>

        <!--  Forward to Registration page  -->
        <action path="/register"  forward="/register.jsp"/>

        <!-- Forward to Index page  -->
        <action path="/index"  forward="/index.jsp"/>

        <!--  Add new Employee  -->
        <action path="/addEmployee" name="RegForm" input="/register.jsp" type="Controller.EmployeesController" parameter="addEmployee">
            <forward name="success" path="/register.jsp"/>
            <forward name="failed" path="/register.jsp"/>
        </action>

        <!--  Fetch an Employee details  -->
        <action path="/getEmpDetails" name="GetEmpDetailForm" input="index.jsp" type="Controller.EmployeesController" parameter="getEmployee">
            <forward name="error" path="/index.jsp"/>
            <forward name="displayDetails" path="/Views/displayEmployee.jsp"/>
            <forward name="userNotFound" path="/index.jsp"/>
        </action>
    </action-mappings>

    <!--  Validation Message Resources  -->
    <message-resources parameter="Messages"/>

    <!-- Validation plugin  -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
                      value="/WEB-INF/validator-rules.xml,
                             /WEB-INF/validation.xml"/>
    </plug-in>
</struts-config>